<%- include('header'); -%>
<div class="top-bar">
    <div class="container">
        <div class="nav-bar">
            <a href="https://www.innology.ch"><img src="public/resources/innology_logo.png" class="nav-logo"></a>
            <p>
                <a class="float-right" href="/logout">Logout</a>
            </p>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="showrooms column column-75">
            <h2>Showrooms</h2>
            <div class="grid-container-sr">
                <%- showrooms %>
            </div>
            <!--
            <table class="showrooms-table">
                <tbody>

                </tbody>
            </table>
-->
            <p>
                <button class="" onclick="function toggleCreateForm() {
                            if(document.getElementById('new-showroom').style.display === 'block') {
                                document.getElementById('new-showroom').style.display = 'none';
                            } else {
                                document.getElementById('new-showroom').style.display = 'block';
                            }
                        }
                        toggleCreateForm()">New Showroom</button>
            </p>
            <!--
            <ul class="rooms-ul">

                <li>
                    <button class="" onclick="function toggleCreateForm() {
                            if(document.getElementById('new-showroom').style.display === 'block') {
                                document.getElementById('new-showroom').style.display = 'none';
                            } else {
                                document.getElementById('new-showroom').style.display = 'block';
                            }
                        }
                        toggleCreateForm()">New Showroom</button>
                </li>
            </ul>
            -->
            <div class="" id="new-showroom">
                <form action="/showrooms" class="" method="post" enctype="application/json">
                    <label>Name</label>
                    <input type="text" id="name" name="name" required>
                    <br>
                    <button type="submit" class="btn-accept">Add</button>
                    <button type="button" class="btn-cancel" onclick="function closeCreateForm() {
                            document.getElementById('new-showroom').style.display = 'none';
                        }
                        closeCreateForm()">Cancel</button>
                </form>
            </div>
        </div>

        <div class="inventory column column-25">
            <div class="">
                <h2>Inventory</h2>
                <div class="grid-container-i">
                    <%- inventory %>
                </div>
                <p>
                    <button class="" onclick="function toggleUpdateForm() {
                        if(document.getElementById('upload-model').style.display === 'block') {
                            document.getElementById('upload-model').style.display = 'none';
                        } else {
                            document.getElementById('upload-model').style.display = 'block';
                        }
                    }
                    toggleUpdateForm()">Upload 3D-Modell</button>
                </p>
                <div id="upload-model">
                    <form action="/upload" class="" method="post" enctype="multipart/form-data">
                        <label>.glb - file</label>
                        <input type="file" id="gltffile" name="gltffile" accept=".glb, model/gltf-binary" required>
                        <br>
                        <br>
                        <button type="submit" class="btn-accept">Upload</button>
                        <button type="button" class="btn-cancel" onclick="function closeUpdateForm() {
                            document.getElementById('upload-model').style.display = 'none';
                        }
                        closeUpdateForm()">Cancel</button>
                    </form>
                </div>

                <%- glbalert %>

            </div>
        </div>

    </div>
</div>
<div id="popup">

</div>

<%- include('footer'); -%>