<%- include('header'); -%>
<div class="top-bar">
    <div class="container">
        <div class="nav-bar">
            <a href="https://www.innology.ch"><img src="public/resources/innology_logo.png" class="nav-logo"></a>
            <p>
                <a class="float-right" href="/logout">Logout</a>
            </p>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="showrooms column column-66">
            <h2>Showrooms</h2>
            <div class="showroomsContainer">
                <%- showrooms %>
            </div>
            <p>
                <button class="" onclick="toggleForm('new-showroom')">New Showroom</button>
            </p>
            <div class="" id="new-showroom">
                <form action="/showrooms" class="" method="post" enctype="application/json">
                    <label>Name</label>
                    <input type="text" id="name" name="name" required>
                    <br>
                    <button type="submit" class="btn-accept">Add</button>
                    <button type="button" class="btn-cancel" onclick="closeForm('new-showroom')">Cancel</button>
                </form>
            </div>
        </div>

        <div class="inventory column column-33">

            <h2>Inventory</h2>
            <div class="inventoryContainer">
                <%- inventory %>
            </div>
            <p>
                <button class="" onclick="toggleForm('upload-model')">Upload 3D-Model</button>
            </p>
            <div id="upload-model">
                <form action="/upload" class="" method="post" enctype="multipart/form-data">
                    <label>.glb - file</label>
                    <input type="file" id="gltffile" name="gltffile" accept=".glb, model/gltf-binary" required>
                    <br>
                    <br>
                    <button type="submit" class="btn-accept">Upload</button>
                    <button type="button" class="btn-cancel" onclick="closeForm('upload-model')">Cancel</button>
                        </form>

                    <%- glbalert %>

            </div>
        </div>

    </div>
</div>
<div id="popup">

</div>

<%- include('footer'); -%>