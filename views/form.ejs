<!DOCTYPE html>
<html>
<head>
    <script src="https://aframe.io/releases/1.3.0/aframe.min.js"></script>
    <style>
        div {
            padding: 20px;
        }
        label, input {
            margin: 5px;
        }
        #iframe {
            padding: 20px;
            margin: 5px;
            width: 500px;
            height: 200px;
        }
    </style>
</head>
<body>
    <div>
        <form action="/form" method="post">
            <label>Entity</label>
            <input type="text" id="entity" name="entity">
            <br>
            <label>Position X</label>
            <input type="number" id="positionx" name="positionx" step="0.1">
            <br>
            <label>Position Y</label>
            <input type="number" id="positiony" name="positiony" step="0.1">
            <br>
            <label>Position Z</label>
            <input type="number" id="positionz" name="positionz" step="0.1">
            <br>
            <label>Color</label>
            <input type="color" id="color" name="color">
            <br>
            <input type="submit">
            <br>
        </form>
    </div>
    <div>
        <a href="/">Back to Scene</a>
    </div>
    <div id="iframe">
        <iframe src="http://localhost:8888/"></iframe>
    </div>
</body>
</html>